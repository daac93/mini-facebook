<% obj.each do |post| %>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <div class="well well-lg">
                <div>
                    User image
                    <%= post.user.full_name %>
                    <div>
                        <small><%= time_ago_in_words(post.created_at) %> ago</small>
                    </div>
                </div>
                <div class="article-body">
                    <%= post.content %>
                    <div>
                        <small>
                            <%= pluralize(post.votes_for.size, 'person') %> likes this.
                        </small>
                    </div>
                </div>
                <div>
                    <%= link_to(like_post_path(post), method: :put, class: "btn btn-default btn-xs") do %>
                        <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> 
                        <%= post.votes_for.size %></br>
                    <% end %>
                </div>
            </div>
            
        </div>
    </div>
<% end %>