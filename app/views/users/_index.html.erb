<table class="table table-striped">
    <thead>
        <tr>
            <th colspan="3" class="page-header">
                <h2>People</h2>
            </th>
        </tr>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% obj.each do |user| %>
        <tr>
            <td><%= user.full_name %></td>
            <td><%= user.email %></td>
            <td>
                <% if !(current_user.friends_with?(user)) %>
                    <%= link_to request_friend_user_path(user), 
                                                        class:"btn btn-success btn-xs",
                                                        method: :post do %>
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Friend
                    <% end %>
                <% else %>
                    <%= link_to remove_friend_user_path(user),
                                                        data: {confirm: "Are you sure you want to remove #{user.first_name} as friend?"},
                                                        class:"btn btn-danger btn-xs",
                                                        method: :post do %>
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Remove Friend
                    <% end %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
